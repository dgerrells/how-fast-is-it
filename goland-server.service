[Unit]
Description=Gopher Service
After=network.target

[Service]
WorkingDirectory=/root/how-fast-is-it/goland/
ExecStart=/root/how-fast-is-it/goland/server
StandardOutput=append:/var/log/goland-server/out.log
StandardError=append:/var/log/goland-server/err.log
Restart=always
User=root
Type=simple
RestartSec=3

[Install]
WantedBy=multi-user.target